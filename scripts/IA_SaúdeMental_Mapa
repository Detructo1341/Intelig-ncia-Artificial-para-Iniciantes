                },
                pesquisa: {
                    title: 'Acelerando a Pesquisa e o Desenvolvimento',
                    description: 'A IA tem a capacidade de processar e encontrar padr√µes em enormes conjuntos de dados cl√≠nicos e de pesquisa, algo imposs√≠vel para um ser humano. Isso pode acelerar a descoberta de novos insights sobre transtornos mentais, a efic√°cia de tratamentos e a valida√ß√£o de novas abordagens terap√™uticas.',
                    points: [
                        '<strong>An√°lise Preditiva:</strong> Identifica√ß√£o de fatores de risco para o desenvolvimento de transtornos em grandes popula√ß√µes.',
                        '<strong>Processamento de Estudos:</strong> An√°lise r√°pida de milhares de artigos cient√≠ficos para encontrar conex√µes e evid√™ncias.',
                        '<strong>Valida√ß√£o de Terapias:</strong> An√°lise de dados an√¥nimos de prontu√°rios para medir a efic√°cia de diferentes interven√ß√µes em larga escala.'
                    ]
                }
            };

            const opportunityCards = document.querySelectorAll('.opportunity-card');
            const opportunityContentContainer = document.getElementById('opportunity-content');

            function updateContent(target) {
                const data = opportunityContentData[target];
                if (!data) return;

                let pointsHTML = data.points.map(point => `<li class="flex items-start mt-3"><span class="text-sky-500 mr-2 mt-1">‚úì</span><span>${point}</span></li>`).join('');

                opportunityContentContainer.innerHTML = `
                    <div class="active">
                        <h3 class="font-bold text-2xl text-slate-800">${data.title}</h3>
                        <p class="mt-3 text-slate-600">${data.description}</p>
                        <ul class="mt-4 text-slate-700">${pointsHTML}</ul>
                    </div>
                `;
            }
            
            opportunityCards.forEach(card => {
                card.addEventListener('click', () => {
                    opportunityCards.forEach(c => c.classList.remove('active'));
                    card.classList.add('active');
                    const target = card.getAttribute('data-target');
                    updateContent(target);
                });
            });

            updateContent('diagnostico');
            
            const ctx = document.getElementById('distributionChart').getContext('2d');
            const distributionChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Sudeste', 'Sul', 'Nordeste', 'Centro-Oeste', 'Norte'],
                    datasets: [{
                        label: 'Distribui√ß√£o de Psic√≥logos',
                        data: [57, 18, 15, 7, 3],
                        backgroundColor: [
                            '#0284c7', 
                            '#38bdf8',
                            '#7dd3fc',
                            '#bae6fd',
                            '#e0f2fe'
                        ],
                        borderColor: '#fff',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                color: '#475569'
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed !== null) {
                                        label += context.parsed + '%';
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            const navLinks = document.querySelectorAll('nav a');
            navLinks.forEach(link => {
                link.addEventListener('click', e => {
                    const href = link.getAttribute('href');
                    if(href.startsWith('#')) {
                        e.preventDefault();
                        const targetElement = document.querySelector(href);
                        if (targetElement) {
                            const offsetTop = targetElement.offsetTop - 64;
                            window.scrollTo({
                                top: offsetTop,
                                behavior: 'smooth'
                            });
                        }
                    }
                });
            });
        });
    </script>
