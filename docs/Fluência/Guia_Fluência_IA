    </footer>

    <!-- JavaScript para a interatividade do FAQ e chamadas Gemini -->
    <script>
        // Fun√ß√£o para alternar o FAQ (mantida da vers√£o anterior)
        document.addEventListener('DOMContentLoaded', () => {
            const faqButtons = document.querySelectorAll('.faq-button');
            faqButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const answerId = button.id.replace('q', 'a');
                    const answer = document.getElementById(answerId);
                    const isExpanded = button.getAttribute('aria-expanded') === 'true';

                    faqButtons.forEach(otherButton => {
                        if (otherButton !== button) {
                            otherButton.setAttribute('aria-expanded', 'false');
                            document.getElementById(otherButton.id.replace('q', 'a')).classList.add('hidden');
                        }
                    });

                    if (isExpanded) {
                        button.setAttribute('aria-expanded', 'false');
                        answer.classList.add('hidden');
                    } else {
                        button.setAttribute('aria-expanded', 'true');
                        answer.classList.remove('hidden');
                    }
                });
            });
        });

        const apiKey = ""; // Chave da API (ser√° fornecida em tempo de execu√ß√£o)
        const model = 'gemini-2.5-flash-preview-05-20';
        const apiUrlBase = `https://generativelanguage.googleapis.com/v1beta/models/${model}:generateContent?key=${apiKey}`;

        /**
         * Executa a chamada √† API Gemini com backoff exponencial.
         * @param {string} userQuery - O prompt do usu√°rio.
         * @param {string} systemPrompt - A instru√ß√£o do sistema para guiar o LLM.
         * @param {number} retries - Contador de tentativas.
         */
        async function callGeminiApi(userQuery, systemPrompt, retries = 0) {
            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
                systemInstruction: { parts: [{ text: systemPrompt }] },
            };

            try {
                const response = await fetch(apiUrlBase, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    if (response.status === 429 && retries < 5) {
                        const delay = Math.pow(2, retries) * 1000;
                        await new Promise(resolve => setTimeout(resolve, delay));
                        return callGeminiApi(userQuery, systemPrompt, retries + 1);
                    }
                    throw new Error(`Erro na API: ${response.statusText}`);
                }

                const result = await response.json();
                const text = result.candidates?.[0]?.content?.parts?.[0]?.text;
                if (!text) throw new Error("Resposta da API incompleta ou vazia.");
                return text;

            } catch (error) {
                console.error("Falha na chamada ao Gemini API:", error);
                return `Erro ao processar a solicita√ß√£o: ${error.message}.`;
            }
        }

        // --- Funcionalidade 1: Gerador de Prompt √âtico (Delega√ß√£o/Descri√ß√£o) ---
        async function generateEthicalPrompt() {
            const inputElement = document.getElementById('taskInput');
            const outputElement = document.getElementById('promptOutput');
            const outputContainer = document.getElementById('promptOutputContainer');
            const button = document.getElementById('generatePromptBtn');
            const buttonText = document.getElementById('promptBtnText');
            const spinner = document.getElementById('promptSpinner');

            const userQuery = inputElement.value.trim();
            if (!userQuery) {
                outputElement.textContent = "Por favor, insira uma tarefa gen√©rica para a IA.";
                outputContainer.classList.remove('hidden');
                return;
            }

            button.disabled = true;
            buttonText.textContent = "Gerando...";
            spinner.classList.remove('hidden');
            outputContainer.classList.add('hidden');

            const systemPrompt = "Aja como um especialista em √©tica e flu√™ncia em IA. Dada uma tarefa gen√©rica de IA, reformule-a num prompt detalhado e respons√°vel. O prompt deve incluir: 1) o papel e contexto (Psic√≥logo/Auditor), 2) uma restri√ß√£o √©tica/de vi√©s, 3) o formato de output desejado (lista, tabela, resumo), e 4) uma etapa de Discernimento/valida√ß√£o. Responda apenas com o prompt reformulado em Portugu√™s.";

            const result = await callGeminiApi(userQuery, systemPrompt);

            outputElement.textContent = result;
            outputContainer.classList.remove('hidden');
            button.disabled = false;
            buttonText.textContent = "Gerar Prompt Respons√°vel ‚ú®";
            spinner.classList.add('hidden');
        }

        // --- Funcionalidade 2: Analisador de Vi√©s e Risco (Discernimento) ---
        async function analyzeBias() {
            const inputElement = document.getElementById('biasInput');
            const outputElement = document.getElementById('biasOutput');
            const scoreElement = document.getElementById('biasScore');
            const outputContainer = document.getElementById('biasOutputContainer');
            const button = document.getElementById('analyzeBiasBtn');
            const buttonText = document.getElementById('biasBtnText');
            const spinner = document.getElementById('biasSpinner');

            const userQuery = inputElement.value.trim();
            if (!userQuery) {
                outputElement.textContent = "Por favor, cole um texto de IA para auditoria de vi√©s.";
                outputContainer.classList.remove('hidden');
                scoreElement.textContent = "";
                return;
            }

            button.disabled = true;
            buttonText.textContent = "Avaliando Risco...";
            spinner.classList.remove('hidden');
            outputContainer.classList.add('hidden');
            scoreElement.textContent = "";

            const systemPrompt = "Aja como um auditor de vi√©s lingu√≠stico em textos gerados por IA, focado em √©tica na sa√∫de e psicologia. Analise o texto e identifique: 1) Linguagem generalista/vaga (falta de especificidade), 2) Potenciais vieses de exclus√£o (ex: cultural, socioecon√≥mico) e 3) Falta de atribui√ß√£o de fonte/transpar√™ncia. Forne√ßa uma resposta estruturada em Portugu√™s com a An√°lise Cr√≠tica e Recomenda√ß√µes. No final, adicione numa nova linha a pontua√ß√£o de Risco √âtico de 1 a 10 (onde 10 √© risco m√°ximo) usando o formato: Risco: [N√∫mero]/10.";

            const rawResult = await callGeminiApi(userQuery, systemPrompt);
            
            const scoreMatch = rawResult.match(/Risco: (\d+)\/10/);
            const score = scoreMatch ? scoreMatch[1] : null;
            const cleanResult = rawResult.replace(/Risco: \d+\/10\s*$/, '').trim();

            let scoreColor = 'text-gray-900';
            if (score) {
                const numScore = parseInt(score, 10);
                if (numScore >= 7) scoreColor = 'text-red-600';
                else if (numScore >= 4) scoreColor = 'text-yellow-600';
                else scoreColor = 'text-green-600';
                scoreElement.innerHTML = `N√≠vel de Risco √âtico: <span class="${scoreColor} text-2xl">${score}/10</span>`;
            } else {
                 scoreElement.innerHTML = `N√≠vel de Risco √âtico: <span class="text-gray-500">N/A</span>`;
            }


            outputElement.textContent = cleanResult;
            outputContainer.classList.remove('hidden');
            button.disabled = false;
            buttonText.textContent = "Auditar Risco √âtico ‚ú®";
            spinner.classList.add('hidden');
        }
    </script>

