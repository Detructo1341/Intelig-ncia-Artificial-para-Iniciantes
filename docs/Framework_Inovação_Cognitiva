<script>
  // Fun√ß√£o para abrir abas
  function openTab(evt, tabName) {
    let i, tabcontent, tablinks;
    // Esconde todo o conte√∫do das abas
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
      tabcontent[i].classList.remove("active");
      tabcontent[i].setAttribute("tabindex", "-1"); // Make inactive tabs not focusable
      tabcontent[i].setAttribute("aria-hidden", "true");
    }
    // Remove a classe "active" de todos os bot√µes de aba
    tablinks = document.getElementsByClassName("tab");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].classList.remove("active");
      tablinks[i].setAttribute("aria-selected", "false");
      tablinks[i].setAttribute("tabindex", "-1");
    }
    // Mostra a aba atual e adiciona a classe "active" ao bot√£o que abriu a aba
    const currentTabContent = document.getElementById(tabName);
    if (currentTabContent) {
        currentTabContent.style.display = "block";
        currentTabContent.classList.add("active");
        currentTabContent.setAttribute("tabindex", "0"); // Make active tab focusable
        currentTabContent.setAttribute("aria-hidden", "false");
        // Apenas focar se n√£o for um clique program√°tico inicial
        if (evt && evt.type === 'click') {
            currentTabContent.focus(); // Set focus to the new tab content
        }
    }
    if (evt && evt.currentTarget) {
        evt.currentTarget.classList.add("active");
        evt.currentTarget.setAttribute("aria-selected", "true");
        evt.currentTarget.setAttribute("tabindex", "0");
    } else if (tabName === 'neurociencia' && !evt) { // Handling initial load for the first tab
        const initialButton = document.getElementById('tab-neurociencia');
        if(initialButton) {
            initialButton.classList.add("active");
            initialButton.setAttribute("aria-selected", "true");
            initialButton.setAttribute("tabindex", "0");
        }
    }
  }

  // Define a aba inicial como ativa (Neuroci√™ncia)
  document.addEventListener('DOMContentLoaded', function() {
    openTab(null, 'neurociencia'); // Open the first tab by default without event object

    // Ensure other tab buttons are not in tab order initially
    const otherTabButtons = document.querySelectorAll('.tab:not(.neurociencia)');
    otherTabButtons.forEach(button => {
        button.setAttribute("tabindex", "-1");
    });

    // Set current year in footer
    document.getElementById("currentYear").textContent = new Date().getFullYear();
  });

  // Fun√ß√£o de busca (simples, apenas para demonstra√ß√£o)
  function searchContent() {
    const input = document.getElementById('searchInput');
    const filter = input.value.toLowerCase();
    const tabContents = document.querySelectorAll('.tabcontent');
    const noResultsMessage = document.getElementById('noResultsMessage');
    let resultsFound = false;
    let firstMatchTab = null;

    if (filter.trim() === "") {
        noResultsMessage.style.display = 'none';
        resetTableHighlights();
        return;
    }

    resetTableHighlights(); 

    tabContents.forEach(content => {
        const tables = content.querySelectorAll('table tbody tr');
        const paragraphs = content.querySelectorAll('.description p, .description li, .sintese-ponto p, .sintese-ponto h3, h2, .example'); 
        let tabHasMatch = false;

        tables.forEach(row => {
            const cells = row.getElementsByTagName('td');
            let rowMatch = false;
            for (let i = 0; i < cells.length; i++) {
                if (cells[i]) {
                    if (cells[i].textContent.toLowerCase().includes(filter)) {
                        rowMatch = true;
                        resultsFound = true;
                        tabHasMatch = true;
                        break;
                    }
                }
            }
            if (rowMatch) {
                row.style.backgroundColor = 'var(--accent-orange)'; 
                row.style.color = 'black'; 
            }
        });

        paragraphs.forEach(el => {
            // Create a temporary element to strip HTML for accurate text search
            const tempEl = document.createElement('div');
            tempEl.innerHTML = el.innerHTML;
            const textContent = tempEl.textContent || tempEl.innerText || "";
            
            if (textContent.toLowerCase().includes(filter)) {
                resultsFound = true;
                tabHasMatch = true;
                // Highlight by wrapping matched text, careful not to break HTML structure
                // Simple highlight:
                el.style.backgroundColor = 'var(--accent-orange)'; 
                el.style.color = 'black';
            }
        });
        
        if (tabHasMatch && !firstMatchTab) {
            firstMatchTab = content.id;
        }
    });

    if (resultsFound) {
        noResultsMessage.style.display = 'none';
        if (firstMatchTab) {
            const tabButtonId = document.querySelector(`.tab[aria-controls="${firstMatchTab}"]`).id;
            const tabButton = document.getElementById(tabButtonId);
            if(tabButton && !tabButton.classList.contains('active')) {
                 // Simulate a click event for openTab
                tabButton.click();
            }
        }
    } else {
        noResultsMessage.style.display = 'block';
    }
  }

  function resetTableHighlights() {
    const rows = document.querySelectorAll('table tbody tr');
    rows.forEach(row => {
        row.style.backgroundColor = ''; 
        row.style.color = ''; 
    });
    const highlightedText = document.querySelectorAll('.description p, .description li, .sintese-ponto p, .sintese-ponto h3, h2, .example');
    highlightedText.forEach(el => {
        el.style.backgroundColor = '';
        el.style.color = '';
    });
  }

  // Fun√ß√£o para limpar a busca
  function resetSearch() {
    const input = document.getElementById('searchInput');
    input.value = '';
    document.getElementById('noResultsMessage').style.display = 'none';
    resetTableHighlights();
  }

  // Permitir busca com Enter
  document.getElementById('searchInput').addEventListener('keypress', function(event) {
    if (event.key === 'Enter') {
      event.preventDefault(); 
      searchContent();
    }
  });

</script>

</body>
</html>
