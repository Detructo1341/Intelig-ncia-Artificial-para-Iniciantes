        }

        .input-group {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        #nameInput,
        #promptInput {
            flex-grow: 1;
            padding: 12px 16px;
            border-radius: 0.5rem;
            border: 1px solid #475569;
            background-color: #334155;
            color: #e2e8f0;
            transition: border-color 0.3s;
        }

        #nameInput:focus,
        #promptInput:focus {
            border-color: #38bdf8;
            /* Azul Ciano */
            outline: none;
        }

        .action-button {
            background-color: #38bdf8;
            /* Azul Ciano */
