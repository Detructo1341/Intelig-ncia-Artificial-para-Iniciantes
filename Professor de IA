            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.1s;
        }

        .action-button:hover {
            background-color: #0ea5e9;
            transform: translateY(-1px);
        }

        .action-button:disabled {
            background-color: #475569;
            color: #94a3b8;
            cursor: not-allowed;
            transform: none;
        }

        #responseArea {
            margin-top: 32px;
            padding: 20px;
            background-color: #1a2434;
            /* Um pouco mais escuro que o container */
            border-radius: 0.5rem;
            min-height: 150px;
