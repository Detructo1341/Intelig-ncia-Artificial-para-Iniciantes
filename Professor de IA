<body>

    <div class="app-container">
        <h1 class="text-3xl font-bold text-center text-sky-400 mb-4">
            <i class="fa-solid fa-magic mr-2"></i> Descomplicador de IA com Gemini
        </h1>
        <p class="text-center text-slate-400 mb-6">
            Pergunte algo. Eu vou usar o Gemini com Google Search para garantir que as informa√ß√µes sejam precisas.
        </p>

        <!-- Novo Campo de Nome do Utilizador -->
        <div class="name-input-container">
            <label for="nameInput" class="text-slate-300 font-semibold w-1/4 sm:w-1/5">O Meu Nome:</label>
            <input type="text" id="nameInput" value="Gabriel" placeholder="Introduza o seu nome" class="w-3/4 sm:w-4/5">
        </div>

        <div class="input-group">
            <input type="text" id="promptInput"
                placeholder="Ex: Qual a diferen√ßa entre LLM e LMM? (Seja um c√©tico vision√°rio!)">
            <button id="submitBtn" class="action-button">
                <i class="fa-solid fa-arrow-right-long"></i> Enviar
            </button>
        </div>

        <div id="responseArea" class="shadow-lg">
            <p class="text-slate-500">Aguardando sua pergunta, Gabriel...</p>
        </div>

        <!-- Novas A√ß√µes LLM -->
        <div class="llm-actions">
            <button id="summarizeBtn" class="action-button bg-purple-600 hover:bg-purple-700" disabled>
                <i class="fa-solid fa-wand-magic-sparkles mr-2"></i> ‚ú® Resumir e Palavras-Chave
            </button>
            <button id="ttsBtn" class="action-button bg-emerald-600 hover:bg-emerald-700" disabled>
                <i class="fa-solid fa-volume-up mr-2"></i> üó£Ô∏è Ouvir Resposta
            </button>
        </div>

        <div id="audioArea" class="mt-4 flex items-center hidden">
            <audio id="audioPlayer" controls class="w-full"></audio>
        </div>

        <div id="sourcesArea" class="mt-4 border-t border-slate-700 pt-4">
            <h3 class="text-lg font-semibold text-slate-300 mb-2">
                <i class="fa-solid fa-book-open-reader mr-1"></i> Fontes de Grounding (Verifica√ß√£o):
            </h3>
            <div id="sourcesList" class="flex flex-wrap">
                <p class="text-sm text-slate-500">As fontes aparecer√£o aqui para verifica√ß√£o.</p>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const nameInput = document.getElementById('nameInput'); // Novo
            const promptInput = document.getElementById('promptInput');
            const submitBtn = document.getElementById('submitBtn');
            const summarizeBtn = document.getElementById('summarizeBtn');
            const ttsBtn = document.getElementById('ttsBtn');
            const responseArea = document.getElementById('responseArea');
            const sourcesList = document.getElementById('sourcesList');
            const audioPlayer = document.getElementById('audioPlayer');
            const audioArea = document.getElementById('audioArea');

            // Estado inicial dos bot√µes LLM
            summarizeBtn.disabled = true;
            ttsBtn.disabled = true;

            // --- Configura√ß√µes da API ---
            const apiKey = "";
            const generalApiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
            const ttsApiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-tts:generateContent?key=${apiKey}`;

            // --- Fun√ß√µes Auxiliares para TTS ---

            function base64ToArrayBuffer(base64) {
                const binaryString = atob(base64);
                const len = binaryString.length;
                const bytes = new Uint8Array(len);
                for (let i = 0; i < len; i++) {
                    bytes[i] = binaryString.charCodeAt(i);
                }
                return bytes.buffer;
            }

            function pcmToWav(pcm16, sampleRate) {
                const buffer = new ArrayBuffer(44 + pcm16.length * 2);
                const view = new DataView(buffer);
                let offset = 0;

                function writeString(s) {
                    for (let i = 0; i < s.length; i++) {
                        view.setUint8(offset + i, s.charCodeAt(i));
                    }
                    offset += s.length;
                }

                function writeUint32(i) {
                    view.setUint32(offset, i, true);
                    offset += 4;
                }

                function writeUint16(i) {
                    view.setUint16(offset, i, true);
                    offset += 2;
                }

                // RIFF chunk
                writeString('RIFF');
                writeUint32(36 + pcm16.length * 2);
                writeString('WAVE');

                // fmt chunk
                writeString('fmt ');
                writeUint32(16); // Chunk size
                writeUint16(1); // Format (1 for PCM)
                writeUint16(1); // Channels (1)
                writeUint32(sampleRate);
                writeUint32(sampleRate * 2); // Byte rate (SampleRate * Channels * BitsPerSample/8)
                writeUint16(2); // Block align (Channels * BitsPerSample/8)
                writeUint16(16); // Bits per sample (16)

                // data chunk
                writeString('data');
                writeUint32(pcm16.length * 2);

                // PCM data
                for (let i = 0; i < pcm16.length; i++) {
                    view.setInt16(offset, pcm16[i], true);
                    offset += 2;
                }

                return new Blob([buffer], { type: 'audio/wav' });
            }

            // --- Fun√ß√£o de Backoff Exponencial ---

            async function fetchWithBackoff(url, options, maxRetries = 5) {
                for (let i = 0; i < maxRetries; i++) {
                    try {
                        const response = await fetch(url, options);
                        if (response.status !== 429) { // 429 √© Too Many Requests
                            return response;
                        }
                        // Se for 429, espera e tenta novamente
                        const delay = Math.pow(2, i) * 1000 + Math.random() * 1000;
                        await new Promise(resolve => setTimeout(resolve, delay));
                    } catch (error) {
                        // Espera no caso de falha de rede/fetch e tenta novamente
                        const delay = Math.pow(2, i) * 1000 + Math.random() * 1000;
                        await new Promise(resolve => setTimeout(resolve, delay));
                    }
                }
                throw new Error("Falha na chamada da API ap√≥s v√°rias tentativas.");
            }

            // --- Fun√ß√£o Principal de Gera√ß√£o de Conte√∫do ---

            async function generateContent(userQuery) {
                const userName = nameInput.value.trim() || "Utilizador"; // Obt√©m o nome ou usa "Utilizador" como padr√£o

                responseArea.innerHTML = `<div class="loading text-sky-400"><i class="fa-solid fa-spinner fa-spin mr-2"></i> Pensando como um especialista c√©tico para ${userName}...</div>`;
                sourcesList.innerHTML = '<p class="text-sm text-slate-500">Buscando fontes confi√°veis na web...</p>';
                submitBtn.disabled = true;
                summarizeBtn.disabled = true;
                ttsBtn.disabled = true;
                audioArea.classList.add('hidden'); // Esconde o player de √°udio

                // System Instruction Dƒ∞N√ÇMICA
                const systemPrompt = `Voc√™ √© um especialista em tecnologia com uma perspectiva vision√°ria e um tom casual e coloquial. Voc√™ verifica tudo duas vezes, √© c√©tico, e suas opini√µes s√£o contundentes, mas sempre respeitosas. Chame o usu√°rio de ${userName}. Use o Google Search para fundamentar todas as respostas e garantir a precis√£o. Mantenha as respostas concisas e diretas. **MAIS IMPORTANTE:** As respostas devem ser extremamente simplificadas e acess√≠veis a leigos, sem o uso de termos t√©cnicos. Use analogias do dia a dia.`;

                const payload = {
                    contents: [{ parts: [{ text: userQuery }] }],
                    tools: [{ "google_search": {} }],
                    systemInstruction: {
                        parts: [{ text: systemPrompt }]
                    },
                };

                const options = {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                };

                try {
                    const response = await fetchWithBackoff(generalApiUrl, options);
                    const result = await response.json();

                    if (!response.ok) {
                        throw new Error(result.error?.message || `Erro de API: ${response.status}`);
                    }

                    const candidate = result.candidates?.[0];
                    let text = `Ops! N√£o consegui gerar uma resposta. Tente refinar a pergunta, ${userName}.`;
                    let sources = [];

                    if (candidate && candidate.content?.parts?.[0]?.text) {
                        text = candidate.content.parts[0].text;

                        const groundingMetadata = candidate.groundingMetadata;
                        if (groundingMetadata && groundingMetadata.groundingAttributions) {
                            sources = groundingMetadata.groundingAttributions
                                .map(attribution => ({
                                    uri: attribution.web?.uri,
                                    title: attribution.web?.title,
                                }))
                                .filter(source => source.uri && source.title);
                        }
                    }

                    responseArea.innerText = text;

                    // Habilita bot√µes de a√ß√£o se houver texto
                    if (text.length > 50 && !text.includes('Ops!')) {
                        summarizeBtn.disabled = false;
                        ttsBtn.disabled = false;
                    }

                    // Exibir fontes
                    sourcesList.innerHTML = '';
                    if (sources.length > 0) {
                        sources.forEach((source, index) => {
                            const link = document.createElement('a');
                            link.href = source.uri;
                            link.target = '_blank';
                            link.className = 'source-link';
                            link.innerHTML = `<i class="fa-solid fa-arrow-up-right-from-square mr-1"></i> ${source.title.substring(0, 30)}... [${index + 1}]`;
                            sourcesList.appendChild(link);
                        });
                    } else {
                        sourcesList.innerHTML = '<p class="text-sm text-slate-500">Nenhuma fonte de web espec√≠fica foi usada para fundamentar esta resposta.</p>';
                    }

                } catch (error) {
                    console.error("Erro no processamento da API:", error);
                    responseArea.innerText = `Erro Cr√≠tico: ${error.message}. Tente novamente.`;
                    sourcesList.innerHTML = '';
                } finally {
                    submitBtn.disabled = false;
                }
            }

            // --- Fun√ß√£o de Resumo LLM ---

            async function summarizeContent() {
                const originalText = responseArea.innerText;
                if (originalText.includes('Aguardando') || summarizeBtn.disabled) return;

                const originalContent = responseArea.innerHTML;
                responseArea.innerHTML = '<div class="loading text-purple-400"><i class="fa-solid fa-sync fa-spin mr-2"></i> Criando resumo e palavras-chave...</div>';
                summarizeBtn.disabled = true;
                ttsBtn.disabled = true;

                // Nova System Instruction para for√ßar o resumo e extra√ß√£o de palavras-chave
                const systemPrompt = "Voc√™ √© um assistente de estudo eficiente. Dada a resposta do utilizador, forne√ßa um resumo super conciso de uma frase (no m√°ximo 20 palavras) e liste as 3 palavras-chave mais importantes no final, separadas por v√≠rgulas. Mantenha o tom informal e use a analogia da resposta original.";

                const userQuery = `Resuma o seguinte conte√∫do e extraia as palavras-chave:\n\n---\n${originalText}`;

                const payload = {
                    contents: [{ parts: [{ text: userQuery }] }],
                    systemInstruction: {
                        parts: [{ text: systemPrompt }]
                    },
                };

                const options = {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                };

                try {
                    const response = await fetchWithBackoff(generalApiUrl, options);
                    const result = await response.json();

                    if (result.candidates?.[0]?.content?.parts?.[0]?.text) {
                        responseArea.innerText = result.candidates[0].content.parts[0].text;
                    } else {
                        responseArea.innerHTML = originalContent; // Volta ao original se falhar
                        console.error("Falha ao resumir.");
                    }

                } catch (error) {
                    console.error("Erro no resumo:", error);
                    responseArea.innerHTML = originalContent; // Volta ao original se falhar
                } finally {
                    summarizeBtn.disabled = false;
                    ttsBtn.disabled = false;
                }
            }

            // --- Fun√ß√£o de TTS ---

            async function generateAudio() {
                const textToSpeak = responseArea.innerText;
                if (textToSpeak.includes('Aguardando') || ttsBtn.disabled || textToSpeak.includes('Ops!')) return;

                ttsBtn.disabled = true;
                const originalText = ttsBtn.innerHTML;
                ttsBtn.innerHTML = '<i class="fa-solid fa-sync fa-spin mr-2"></i> A gerar √°udio...';
                audioArea.classList.add('hidden');
                audioPlayer.src = '';

                const payload = {
                    contents: [{
                        parts: [{ text: textToSpeak }]
                    }],
                    generationConfig: {
                        responseModalities: ["AUDIO"],
                        speechConfig: {
                            voiceConfig: {
                                prebuiltVoiceConfig: { voiceName: "Puck" } // Voz alegre e amig√°vel
                            }
                        }
                    },
                    model: "gemini-2.5-flash-preview-tts"
                };

                const options = {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                };

                try {
                    const response = await fetchWithBackoff(ttsApiUrl, options);
                    const result = await response.json();

                    if (!response.ok) {
                        throw new Error(result.error?.message || `Erro TTS: ${response.status}`);
                    }

                    const part = result?.candidates?.[0]?.content?.parts?.[0];
                    const audioData = part?.inlineData?.data;
                    const mimeType = part?.inlineData?.mimeType;

                    if (audioData && mimeType && mimeType.startsWith("audio/")) {
                        const sampleRateMatch = mimeType.match(/rate=(\d+)/);
                        const sampleRate = sampleRateMatch ? parseInt(sampleRateMatch[1], 10) : 16000;

                        const pcmData = base64ToArrayBuffer(audioData);
                        const pcm16 = new Int16Array(pcmData);
                        const wavBlob = pcmToWav(pcm16, sampleRate);

                        const audioUrl = URL.createObjectURL(wavBlob);
                        audioPlayer.src = audioUrl;
                        audioArea.classList.remove('hidden');
                        // audioPlayer.play(); // N√£o reproduzir automaticamente para evitar problemas de navegador

                    } else {
                        alert('Erro ao processar o √°udio TTS. Tente novamente.');
                    }

                } catch (error) {
                    console.error("Erro TTS:", error);
                    // Usamos 'alert' aqui pois √© uma fun√ß√£o utilit√°ria de erro do navegador para um problema de API/code
                    alert(`Erro ao gerar √°udio: ${error.message}`);
                } finally {
                    ttsBtn.disabled = false;
                    ttsBtn.innerHTML = originalText;
                }
            }


            // --- Listeners de Eventos ---

            submitBtn.addEventListener('click', () => {
                const query = promptInput.value.trim();
                if (query) {
                    generateContent(query);
                }
            });

            promptInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter' && !submitBtn.disabled) {
                    submitBtn.click();
                }
            });

            summarizeBtn.addEventListener('click', summarizeContent);
            ttsBtn.addEventListener('click', generateAudio);

            // Atualiza a mensagem inicial de boas-vindas
            nameInput.addEventListener('input', () => {
                const userName = nameInput.value.trim() || "Utilizador";
                if (responseArea.innerText.startsWith("Aguardando sua pergunta")) {
                    responseArea.innerText = `Aguardando sua pergunta, ${userName}...`;
                }
            });
        });
    </script>

</body>

</html>
